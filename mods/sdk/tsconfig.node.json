{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/node/**/*",
    "src/generated/node/**/*",
    "src/node.ts",
    "src/client/Client.ts",
    "src/Domains.ts"
  ],
  "exclude": ["node_modules", "dist", "test"]
}